<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="Write your message" autofocus>
            </div>
            <div class="form-group">
                <input type="tel" name="phone" class="form-control" placeholder="+3476523846" autocomplete="off">
            </div>
            <button class="btn btn-primary btn-block">
                Send
            </button>
        </form>
    </div>
    <div class="col-md-8">
        {{#if messages}}
        <ul class="list-group"  style="height: 70vh; overflow-y:auto">
            {{#each messages}}
            <div class="list-group-item list-group-item-info list-group-item-action">
                <p>{{Body}}</p>
                <span>{{hideNumber To}}</span>
                <span>{{hideNumber From}}</span>
            </div>
            {{/each}}
        </ul>
        {{else}}
        <p>Not messages yet</p>
        {{/if}}

    </div>
</div>